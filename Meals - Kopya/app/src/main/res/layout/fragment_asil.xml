<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsilFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="#FFDFDF"
            android:src="@drawable/delivery"></ImageView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#DFDEDE"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/pizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:src="@drawable/pizza"></ImageView>

            <ImageView
                android:id="@+id/noodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/noodle"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#DFDEDE"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/hambruger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:src="@drawable/hamburger"></ImageView>

            <ImageView
                android:id="@+id/taco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/taco"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#DFDEDE"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/sosisli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:src="@drawable/sosisli"></ImageView>

            <ImageView
                android:id="@+id/cupcake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cupcake"></ImageView>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>